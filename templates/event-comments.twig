{% for comment in event.comments %}
<div class="box-comment">
    <!-- User image -->
    <img class="img-circle img-sm" src="{{ comment.user.profileimage('small') }}" alt="User Image" width="30" height="30">

    <div class="comment-text">
        <span class="username">
            {{ comment.user.name }}
            <span class="text-muted pull-right">{{ comment.created | date('d/m/Y') }}</span>
        </span><!-- /.username -->
    {{ comment.text }}
    </div>
    <!-- /.comment-text -->
</div>
{% endfor %}