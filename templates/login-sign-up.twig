{% extends 'login-layout.twig' %}

{% block content %}

<form action="#" method="post" class="form form--login">
<input type="hidden" name="id" value="<?php echo $user->getId() ?>" />
  <p class="text--center">You don't currently have an account.</p>
  <p class="text--center">Confirm your details to request an account:</p>
  <div class="form__field">
    <label class="fa fa-user" for="firstName"><span class="hidden">First name</span></label>
    <input name="firstName" id="firstName" type="text" class="form__input" placeholder="First Name" value="{{ firstname }}" required>
  </div>
  <div class="form__field">
    <label class="fa fa-user" for="lastName"><span class="hidden">Last name</span></label>
    <input name="lastName" id="lastName" type="text" class="form__input" placeholder="Last Name" value="{{ lastname }}" required>
  </div>
  <div class="form__field">
    <label class="fa fa-envelope-o" for="email"><span class="hidden">Email address</span></label>
    <input name="email" id="email" type="text" class="form__input" placeholder="Email address" value="{{ email }}" required>
  </div>
  {% if message %}
  {{ message }}
  {% endif %}
  <div class="form__field">
    <input type="submit" value="Request access">
  </div>
</form>
<p class="text--center">
  <a href="{{ path_for('sign-up-cancel') }}">Cancel</a>
</p>

{% endblock %}