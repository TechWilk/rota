{% extends 'layout.twig' %}

{% block content %}

<div class="row">

  <div class="col-sm-6">
    {% for resource in resources %}
    <div class="box box-primary" id="resource{{ resource.id }}">
      <div class="box-header">
        <h2 class="box-title">{{ resource.title }}</h2>
      </div>
      <div class="box-body">
        {{ resource.description | markdown }}
      </div>
      <div class="box-footer">
      {% if resource.url %}
      <a class="btn btn-primary" href="{{ path_for('resource', {'id': resource.id }) }}">Download</a>
      {% endif %}
      <a class="btn btn-primary" href="{{ path_for('resource-edit', {'id': resource.id }) }}">Edit</a>
      </div>
    </div>
    {% else %}
    <div class="box box-primary">
      <div class="box-header">
        <h2 class="box-title">No resources.</h2>
      </div>
      <div class="box-body">
        <p>There are currently no resources uploaded to this system.</p>
        <a class="btn btn-primary" href="{{ path_for('resource-new') }}">Add resource</a>
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="col-sm-6">
    <div class="box">
      <div class="box-footer">
        <a class="btn btn-primary" href="{{ path_for('resource-new') }}">Add resource</a>
      </div>
    </div>

  </div>


{% endblock %}